<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lifeband.lifeband">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.NFC" />

    <application
        android:name=".application.LifebandApplication"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <activity android:name=".activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.NfcActivity"
            android:label="@string/title_activity_nfc"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.LoadingActivity"
            android:label="@string/title_activity_loading"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.MainActivity"
            android:label="Lifeband"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.InformationActivity"
            android:label="@string/title_activity_information"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.EmergencyContactActivity"
            android:label="@string/title_activity_emergency_contact"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.HistoryActivity"
            android:label="@string/title_activity_history"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".activity.MedicationActivity"
            android:label="@string/title_activity_medication"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>
